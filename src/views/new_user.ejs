<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Registrar usuario</title>
    <%- include ('partials/head') %>
    <%- include ('partials/modal') %>
  </head>
  <body>
    <%- include (nav) %>
    <div class="container p-5">
      <div class="row">
        <div class="col-sm-4 offset-md-4">
          <div class="card animated flipInY">
            <div class="card-header bg-dark text-white text-center">
              <span>
                <h3>Inicia sesión</h3>
              </span>
              <span>
                <p>¡ sumergete en un mundo virtual !</p>
              </span>
            </div>
            <div class="card-body">
              <form>
                <div class="form-group">
                  <input class="form-control" type="text" placeholder="Usuario" id="nameAccess">
                </div>
                <div class="form-group">
                  <input class="form-control" type="password" placeholder="contraseña" id="passwordAccess">
                </div>
                <div class="form-group">
                  <button id="Iniciar" class="btn btn-primary btn-block" type="button">
                    </i> Entrar
                  </button><br>
                  <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal">
                    Registrar usuario
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/javascripts/login.js"></script>
  </body>
</html>
